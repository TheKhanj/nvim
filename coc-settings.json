{
  "languageserver": {
    "sourcepawn": {
      "command": "sourcepawn-studio",
      "filetypes": [
        "sourcepawn"
      ],
      "settings": {
        "SourcePawnLanguageServer": {
          "includeDirectories": [
            "/usr/local/share/sourcemod/addons/sourcemod/scripting/include"
          ],
          "compiler": {
            "path": "/usr/local/share/sourcemod/addons/sourcemod/scripting/spcomp"
          }
        }
      }
    },
    "sqls": {
      "command": "sqls",
      "filetypes": [
        "sql"
      ],
      "shell": true
    },
    "awk": {
      "command": "awk-language-server",
      "args": [],
      "filetypes": [
        "awk"
      ]
    },
    "meson": {
      "command": "mesonlsp",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "meson.build"
      ],
      "filetypes": [
        "meson"
      ]
    }
  },
  "inlayHint.enable": false,
  "coc.preferences.useQuickfixForLocations": true
}
