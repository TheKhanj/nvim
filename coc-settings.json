{
  "languageserver": {
    "sourcepawn": {
      "command": "sourcepawn-studio",
      "filetypes": [
        "sourcepawn"
      ]
    },
    "sqls": {
      "command": "sqls",
      "filetypes": [
        "sql"
      ],
      "shell": true
    },
    "awk": {
      "command": "awk-language-server",
      "args": [],
      "filetypes": [
        "awk"
      ]
    },
    "meson": {
      "command": "mesonlsp",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "meson.build"
      ],
      "filetypes": [
        "meson"
      ]
    }
  },
  "inlayHint.enable": false,
  "coc.preferences.useQuickfixForLocations": true
}
